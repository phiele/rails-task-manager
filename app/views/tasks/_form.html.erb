<%= form_for(@task) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>
  <%= f.label :details %>
  <%= f.text_field :details, class: 'form-control' %>
  <%= f.label :completed %>
  <br>
  <%= f.check_box :completed %>
  <br>
  <%= f.submit class: 'btn btn-primary mt-4' %>
<% end %>
